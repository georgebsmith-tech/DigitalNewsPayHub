<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>
<main class="news-by-cat">
    <section>
        <div class="breaking-news-and-more">
            <div id="search">

            </div>
        </div>
    </section>
    <section class="the-search-and-more">
        <div>
            <div class="the-adverts">
                <img src="../images/adverts-right1.png" alt="">
                <span>advertisements</span>
                <img src="../images/adverts-left1.png" alt="">
            </div>
            <div class="search">
                <button>
                    search
                </button>

            </div>
        </div>


    </section>

    <div>

        <section class="category-contents container">
            <% if(posts) { %>
            <% for(let post of posts) { %>
            <div>
                <div>
                    <img src="<%= post.image_url %>" alt="" class="block">
                </div>
                <div>
                    <h2 class="title"><%= post.title %></h2>
                    <em class="date block"><%= post.date.toDateString() %></em>
                    <article>
                        <%- post.markedBody.substr(0,200) %>...
                    </article>
                    <a href="/blog/<%= post.slug %>">Continue Reading</a>
                </div>
            </div>

            <% } %>
            <% }else{ %>
            <div>
                <h2>There is no post in this category yet</h2>
            </div>

            <% } %>
        </section>


    </div>

</main>
<script src="../js/navs.js"></script>
<%- include('./partials/footer.ejs') %>